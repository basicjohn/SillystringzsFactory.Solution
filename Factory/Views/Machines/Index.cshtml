@{
  Layout = "_Layout";
}

@using Factory.Models;
@model List<Factory.Models.Machine>;
<main class="container">

  <h1>Machines</h1>

  @if (@Model.Count == 0)
  {
    <h3>No machines have been added yet!</h3>
  }

  @foreach (Machine machine in Model)
  {
    <li>@Html.ActionLink($"{machine.MachineName}", "Details", new { id = machine.MachineId })</li>
  }
  <a href='@Url.Action("Create","Machines")' role="button" class="btn btn-warning">Add a Machine</a>
  <a href='@Url.Action("Index","Home")' role="button" class="btn btn-warning">Home</a>
</main>