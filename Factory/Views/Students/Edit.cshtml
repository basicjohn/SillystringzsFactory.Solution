@{
  Layout = "_Layout";
}

@model UniversityRegistrar.Models.Student
<main class="container">

  <h2>Edit</h2>

  <h4>Edit this task: @Html.DisplayFor(model => model.StudentName)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.StudentId)

    @Html.LabelFor(model => model.StudentName)
    @Html.EditorFor(model => model.StudentName,
  new { required = "required" })

    @Html.Label("Select course")
    @Html.DropDownList("CourseId")

    @Html.LabelFor(model => model.DateOfEnrollment)
    @Html.EditorFor(model => model.DateOfEnrollment,
  new { @type = "date" , @value = "model.DateOfEnrollment.Value.ToShortDateString()" })

    <input type="submit" value="Save" class="btn btn-default" />
  }
  <a href='@Url.Action("Index","Students")' role="button" class="btn btn-warning">Back to Enrolled Students</a>
  @* <p>@Html.ActionLink("Back to Enrolled Students", "Index")</p> *@
</main>