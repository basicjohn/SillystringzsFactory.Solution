@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
@model List<UniversityRegistrar.Models.Student>;
<main class="container">

  <h1>Students</h1>

  @if (@Model.Count == 0)
  {
    <h3>No students have been added yet!</h3>
  }

  @foreach (Student student in Model)
  {
    <li>@Html.ActionLink($"{student.StudentName}", "Details", new { id = student.StudentId })</li>
  }
   <a href='@Url.Action("Create","Students")' role="button" class="btn btn-warning">Add a Student</a>
  @* <p>@Html.ActionLink("Add new student", "Create")</p> *@
   <a href='@Url.Action("Index","Home")' role="button" class="btn btn-warning">Home</a>
  @* <p>@Html.ActionLink("Home", "Index", "Home")</p> *@
</main>