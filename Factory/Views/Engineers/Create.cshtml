@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer
<main class="container">
  <h4>Add a new engineer</h4>

  @using (Html.BeginForm())
  {
    @* @Html.Label("Select Department")
      @Html.DropDownList("DepartmentId") *@

    @Html.LabelFor(model => model.EngineerName)
    @Html.TextBoxFor(model => model.EngineerName)

    @Html.LabelFor(model => model.EmploymentStartDate)
    @Html.TextBoxFor(model => model.EmploymentStartDate)

    <input type="submit" value="Add new engineer" />
  }
  <a href='@Url.Action("Index", "Engineers")' role="button" class="btn btn-warning">Back to Engineers</a>
</main>