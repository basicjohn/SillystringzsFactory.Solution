@{
  Layout = "_Layout";
}

@using UniversityRegistrar.Models;
<main class="container">

  <h1>Departments</h1>

  @if (@Model.Count == 0)
  {
    <h3>No Departments have been added yet!</h3>
  }

  <ul>
    @foreach (Department department in Model)
    {
      <li>@Html.ActionLink($"{department.DepartmentName}", "Details", new { id = department.DepartmentId })</li>
    }
  </ul>

  <p>@Html.ActionLink("Add new Department", "Create")</p>
  <p>@Html.ActionLink("Home", "Index", "Home")</p>
</main>