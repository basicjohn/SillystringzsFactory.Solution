@{
  Layout = "_Layout";
}

@model Factory.Models.Engineer;
<main class="container">
  <div class="row engineer-details">
    <h2>Engineer Details</h2>
    <hr />
    <h3>@Html.DisplayNameFor(model => model.EngineerName): @Html.DisplayFor(model => model.EngineerName) |
      @Html.DisplayFor(model => model.EmploymentStartDate)</h3>
    @Html.HiddenFor(model => model.EngineerId)

  </div>
  <div class="row machine-details">


    @if (@Model.JoinEntities.Count == 0)
    {
      <p>This engineer does not contain any machines yet</p>
    }
    else
    {
      <h4>All machines in the engineer:</h4>

      @foreach (var join in Model.JoinEntities)
      {
        <div class="col-md-12">
          <h2><span class="title">Name:</span> <span class="content">@join.Machine.MachineName</span></h2>
          <h3><span class="title">Id Number:</span> <span class="content">@join.Machine.MachineId</span></h3>
          <h3><span class="title">Date of Installation:</span> <span class="content">@join.Machine.InstallDate</span></h3>
          <h3><span class="title">Hours in Operation:</span> <span class="content">@join.Machine.HoursOperated</span></h3>
          <h3><span class="title">Date of Last Inspection:</span> <span class="content">@join.Machine.LastInspection</span>
          </h3>
          <h3><span class="title">Inspection Cycle:</span> <span class="content">@join.Machine.InspectionCycle</span></h3>

          <p>@join.Machine.MachineDescription</p>
        </div>
      }
    }
  </div>
  <div class="row sheparding-buttons">
    <a href='@Url.Action("Index", "Home", new {@class="btn"})' role="button" class="btn btn-warning">Home</a>
    <a href='@Url.Action("Edit", "Engineers", new { id = Model.EngineerId })' role="button" class="btn btn-warning">Edit
      engineer</a>
    <a href='@Url.Action("Delete", "Engineers", new { id = Model.EngineerId })' role="button"
      class="btn btn-warning">Delete
      engineer</a>
  </div>
</main>