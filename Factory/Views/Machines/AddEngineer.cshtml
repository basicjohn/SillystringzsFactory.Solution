@{
  Layout = "_Layout";
}

@model Factory.Models.Machine
<main class="container">

  <h2>Add a engineer</h2>

  <h4>Add a engineer to this machine: @Html.DisplayFor(model => model.MachineName)</h4>

  @using (Html.BeginForm())
  {
    @Html.HiddenFor(model => model.MachineId)

    @Html.Label("Select engineer")
    @Html.DropDownList("EngineerId")

    <input type="submit" value="Save" />
  }
  <a href='@Url.Action("Index", "Machines")' role="button" class="btn btn-warning">Back to machines</a>
</main>